@{
    Layout = "_Layout";
    ViewData["Title"] = "ثبت‌نام";
}

<style>
    body {
        background-color: #ffe4e1;
        font-family: "Vazirmatn", sans-serif;
        direction: rtl;
        text-align: right;
    }

    .register-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 85vh;
    }

    .register-card {
        background-color: #fff;
        width: 400px;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        padding: 40px;
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

        .register-card:hover {
            transform: translateY(-5px);
        }

    .register-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #f77f7f;
        margin-bottom: 10px;
        text-align: center;
    }

    .register-subtitle {
        color: #888;
        margin-bottom: 30px;
        text-align: center;
    }

    form {
        text-align: right;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 500;
        color: #444;
    }

    /* 🎨 همه ورودی‌ها یکدست صورتی */
    input {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid #fcb6b6; /* خط صورتی دور فیلد */
        background-color: #fff0f0; /* پس‌زمینه صورتی خیلی روشن */
        border-radius: 8px;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s, box-shadow 0.3s, background-color 0.3s;
        margin-bottom: 20px;
        color: #444;
    }

        /* 🌸 حالت فوکوس (وقتی کاربر کلیک می‌کند) */
        input:focus {
            border-color: #f77f7f;
            box-shadow: 0 0 6px rgba(247, 127, 127, 0.4);
            background-color: #ffe9e9;
        }

        /* 🧁 غیرفعال کردن رنگ پیش‌فرض مرورگر در autocomplete */
        input:-webkit-autofill,
        input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0px 1000px #fff0f0 inset !important;
            box-shadow: 0 0 0px 1000px #fff0f0 inset !important;
            border: 1px solid #fcb6b6 !important;
            -webkit-text-fill-color: #444 !important;
            transition: background-color 0s ease-in-out 0s;
        }

    button {
        background-color: #f77f7f;
        color: white;
        border: none;
        width: 100%;
        padding: 12px;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #f45c5c;
        }

    .link {
        margin-top: 20px;
        text-align: center;
    }

        .link a {
            color: #f77f7f;
            text-decoration: none;
            font-weight: 500;
        }

            .link a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-wrapper">
    <div class="register-card">
        <div class="register-title">Welcome to ToDo List</div>
        <div class="register-subtitle">ایجاد حساب کاربری</div>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post" autocomplete="off">
            <label>نام:</label>
            <input type="text" name="fName" required autocomplete="off" />

            <label>نام خانوادگی:</label>
            <input type="text" name="lName" required autocomplete="off" />

            <label>شماره موبایل:</label>
            <input type="text" name="mobile" required autocomplete="off" />

            <label>رمز عبور:</label>
            <input type="password" name="password" required autocomplete="new-password" />

            <button type="submit">ثبت‌نام</button>
        </form>


        <div class="link">
            <a asp-action="Login">بازگشت به ورود</a>
        </div>
    </div>
</div>
