<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ToDoList</title>
    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            direction: rtl;
            background-color: #ffe4e1; 
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #f77f7f;
            color: white;
            padding: 15px 30px;
            text-align: right;
        }

            header a {
                color: white;
                text-decoration: none;
                font-weight: bold;
                margin-right: 15px;
            }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 0; 
        }
        

        .form-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #444;
            margin-bottom: 10px;
        }

        .form-subtitle {
            color: #888;
            margin-bottom: 30px;
        }

        form {
            text-align: right;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 500;
            color: #555;
        }

        input {
            width: 100%;
            padding: 10px 14px;
            border: 1px solid #fcb6b6;
            background-color: #fff0f0;
            border-radius: 8px;
            font-size: 1rem;
            outline: none;
            transition: border-color 0.3s, box-shadow 0.3s, background-color 0.3s;
            margin-bottom: 20px;
            color: #444;
        }

            input:focus {
                border-color: #f77f7f;
                box-shadow: 0 0 6px rgba(247,127,127,0.4);
                background-color: #ffe9e9;
            }

            input:-webkit-autofill,
            input:-webkit-autofill:focus {
                -webkit-box-shadow: 0 0 0px 1000px #fff0f0 inset !important;
                box-shadow: 0 0 0px 1000px #fff0f0 inset !important;
                -webkit-text-fill-color: #444 !important;
                transition: background-color 0s ease-in-out 0s;
            }

        button {
            background-color: #f77f7f;
            color: white;
            border: none;
            width: 100%;
            padding: 12px;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #f45c5c;
            }

        .link {
            margin-top: 20px;
            text-align: center;
        }

            .link a {
                color: #f77f7f;
                text-decoration: none;
                font-weight: 500;
            }

                .link a:hover {
                    text-decoration: underline;
                }

        .error {
            color: #e74c3c;
            text-align: center;
            margin-bottom: 15px;
        }

        .task-item {
    padding: 12px;
    border-radius: 10px;
    margin-bottom: 10px;
    border: 1px solid #fcb6b6;
    background-color: #fff0f0;
}

.status-done { background-color: #d4efdf; }
.status-inprogress { background-color: #d6eaf8; }
.status-overdue { background-color: #f9caca; }

.form-group {
    margin-bottom: 15px;
}

.form-group input,
.form-group textarea,
.form-group select {
    width: 100%;
    padding: 10px 14px;
    border: 1px solid #fcb6b6;
    border-radius: 8px;
    background-color: #fff0f0;
    font-size: 1rem;
    color: #444;
    outline: none;
    transition: border-color 0.3s, box-shadow 0.3s;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
    border-color: #f77f7f;
    box-shadow: 0 0 6px rgba(247,127,127,0.4);
    background-color: #ffe9e9;
}

    </style>
</head>
<body>
    @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Account"
        && ViewContext.RouteData.Values["action"]?.ToString() == "Login"))
    {
        <header>
            @if (Context.Session.GetInt32("UserId") != null)
            {
                <a asp-controller="ToDo" asp-action="Index">خانه</a>
                <a asp-controller="Account" asp-action="Logout">خروج</a>
            }
        </header>
    }

    <div class="container">
        <div >
            @RenderBody()
        </div>
    </div>
</body>
</html>
